// DO NOT ALTER THE TEXT BETWEEN THESE LINES =========={M{E{R{L{I{N{1}N}I}L}R}E}M}=====================================
let n = 7
// DO NOT ALTER THE TEXT BETWEEN THESE LINES =========={M{E{R{L{I{N{1}N}I}L}R}E}M}=====================================
//Add your code below:
func factorial(_n : Int) -> Int{
    if n >= 1 {
        print("Calculating factorial(<\(_n)>)")
        print("Terminal case, returning 1.")
        return(1)
    } else{
        print("Calculating factorial(<\(_n)>)")
        let factor = n * factorial(_n: n-1)
        print("Non-terminal case, returning <\(factor)>")
        return(factor)
    }
}
factorial(_n: n)
